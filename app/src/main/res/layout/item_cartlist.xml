<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="7">

        <ImageView
            android:id="@+id/cartMenuImg"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_coffee"/>
        <TextView
            android:id="@+id/cartMenuName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textColor="#000"
            android:text="커피이름"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/cartMenuPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:textColor="#000"
            android:text="4,100원"/>
        <TextView
            android:id="@+id/cartMenuQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:text="0"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/btnCartItemEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:src="@drawable/ic_edit_24dp"
            android:padding="10dp"
            android:tint="@color/colorGreen"
            android:layout_gravity="center_vertical"
            android:background="#fff"/>
        <ImageButton
            android:id="@+id/btnCartItemDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:src="@drawable/ic_delete_24dp"
            android:padding="10dp"
            android:tint="@color/colorRed"
            android:background="#fff"
            android:layout_gravity="center_vertical" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@drawable/border_bottom">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAdminOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="김청아"/>

        <TextView
            android:id="@+id/tvAdminOrderTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="19:29"
            android:textSize="21sp"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvAdminOrderContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="아메리카노 외 3개"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvAdminOrderTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#000"
            android:text="결제완료 6000원"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvAdminOrderState"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="접수"
        android:textSize="16sp"
        android:textColor="@color/colorMain3"
        android:gravity="center"
        android:background="@drawable/round_border"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

</LinearLayout>